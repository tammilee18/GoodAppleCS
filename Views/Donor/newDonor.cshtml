@model User

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css">
    <script src="main.js"></script>
</head>
<body>
    <div>
        <a href="/">Home</a>
        <form asp-action="addDonor" asp-controller="Donor" method="post">
            <h1>Donors Registration</h1>
            <div class="form-group">
                <span asp-validation-for="@Model.FirstName"></span><br>
                <label asp-for="@Model.FirstName"></label>
                <input class="form-control" asp-for="@Model.FirstName"><br>
            </div>
            <div class="form-group">
                <span asp-validation-for="@Model.LastName"></span><br>
                <label asp-for="@Model.LastName"></label>
                <input class="form-control" asp-for="@Model.LastName"><br>
            </div>
            <div class="form-group">
                <span asp-validation-for="@Model.Email"></span><br>
                <label asp-for="@Model.Email"></label>
                <input class="form-control" asp-for="@Model.Email"><br>
            </div>
            <div class="form-group">
                <span asp-validation-for="@Model.Password"></span><br>
                <label asp-for="@Model.Password"></label>
                <input class="form-control" asp-for="@Model.Password"><br>
            </div>
            <div class="form-group">
                <span asp-validation-for="@Model.PasswordConfirm"></span><br>
                <label asp-for="@Model.PasswordConfirm"></label>
                <input class="form-control" asp-for="@Model.PasswordConfirm"><br>
            </div>
            <button class="btn btn-primary">Register</button>
        </form>
    </div>
</body>
</html>