@model WrapperModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <h1>Welcome @Model.LoggedInUser.FirstName!!</h1>
    <a href="/logout">Logout</a>
    <partial name="ProjectPartial">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Project Name</th>
          <th scope="col">Goal</th>
          <th scope="col">Created Date</th>
          <th scope="col">End Date</th>
          <th scope="col"># of Donors</th>
        </tr>
      </thead>
      <tbody>
        @foreach(Project proj in @Model.AllProjects){
          <tr>
            <th scope="row"><a href="">@proj.Name</a></th>
            <td>@proj.GoalAmount</td>
            <td>@proj.CreatedAt.ToString("MMMM dd, yyyy")</td>
            <td>@proj.EndDate</td>
            <td>@proj.Donations.Count</td>
          </tr>
        }
      </tbody>
    </table>
</body>
</html>